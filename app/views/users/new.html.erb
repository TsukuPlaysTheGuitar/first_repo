<div class="container">
    <div>
        <p>新しくユーザーを作成します</p>
    </div>
    <%= form_tag("/create", method: :post) do%>
    <div>
        <p>ユーザー名</p>
        <input type="text" style="width: 20%" name="name" value="<%= @name %>">
    </div>
    <div>
        <p>パスワード</p>
        <input type="password" style="width: 20%" name="password" value="<%= @password %>">
    </div>
    <div class="signup-button">
        <input type="submit" value="登録">
    </div>
    <% end %>
    <div>
        <%= link_to("トップ画面へ戻る", "/") %>
    </div>
</div>